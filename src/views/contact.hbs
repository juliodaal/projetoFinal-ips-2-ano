{{>modal}}
<div class="d-flex justify-content-center mx-sm-5 mx-md-1">
    <div class="container row d-flex align-items-center justify-content-center">
        <div class="jarallax bg-dark py-7 col-12 m-5" data-jarallax data-speed="0.3">
        <span class="bg-overlay" style="opacity: .35;"></span>
        <div class="jarallax-img" style="background-image: url(images/parallax/bg.jpg);"></div>
            <div class="container bg-overlay-content py-5 py-sm-7 text-center">
                <h2 class="h1 text-light mb-0">Good To Recycle</h2>
            </div>
        </div>
        <h1 class="d-inline text-center m-5" width="100%">Contacte-nos</h1>
        <div class="col-12 col-sm-10 my-5">
            <form action="" method="post">
                <div class="form-group">
                    <label for="name-input">Nome</label>
                    <input class="form-control" type="text" name="name-input" id="name-input" placeholder="O seu nome..">
                </div>
                <div class="form-group">
                    <label for="subject-input">Assunto</label>
                    <input class="form-control" type="text" name="subject-input" id="subject-input" placeholder="O seu assunto..">
                </div>
                <div class="form-group">
                    <label for="message-input">Mensagem</label>
                    <textarea class="form-control" name="message-input" id="message-input" rows="5" placeholder="O seu mensagem.."></textarea>
                </div>
                <button class="btn btn-success" type="submit">Enviar</button>
            </form>
        </div>
        <div class="row d-flex justify-content-around align-items-center mb-5">
            <div class="col-12 col-sm-4 card border-0 box-shadow p-0">
                <img src="images/parallax/bg3.jpg" class="card-img-top" alt="Lisboa">
                <div class="card-body">
                    <h5>Lisboa, UE</h5>
                    <ul class="list-unstyled mb-0">
                    <li class="media pb-3 border-bottom">
                        <i class="fe-map-pin font-size-lg mt-2 mb-0 text-primary"></i>
                        <div class="media-body pl-3">
                        <span class="font-size-ms text-muted">Encontre-nos</span>
                        <a href="#" class="d-block nav-link-style font-size-sm">Av. D. João II, Lote 1.17.02 Torre Fernão de Magalhães 15º Piso, 1998-025 Lisboa</a>
                        </div>
                    </li>
                    <li class="media pt-2m">
                        <i class="fe-mail font-size-lg mt-2 mb-0 text-primary"></i>
                        <div class="media-body pl-3">
                        <span class="font-size-ms text-muted">Escreva-nos</span>
                        <a href="mailto:info@goodtorecycle.com" class="d-block nav-link-style font-size-sm">info@goodtorecycle.com</a>
                        </div>
                    </li>
                    </ul>
                </div>
            </div>
            <div class="col-12 col-sm-4 card border-0 box-shadow" style="height: 250px;">
                <div class="card-body text-center">
                    <i class="fe-phone h2 mt-2 mb-4 text-primary"></i>
                    <h3 class="h6 mb-3">Phone numbers</h3>
                    <ul class="list-unstyled font-size-sm mb-0">
                    <li>
                        <span class="mr-1">Chame-nos:</span>
                        <a class="nav-link-style" href="tel:+351477690000">(+351) 477 690 000</a>
                    </li>
                    </ul>
                </div>
            </div>
        </div>
      </div>
</div>
