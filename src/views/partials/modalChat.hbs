<!-- Modal-->
<div class="modal fade" id="modal-chat" tabindex="-1" style="" aria-modal="true" role="dialog">
  <div class="modal-dialog-centered" style="margin:auto; width: 70vw;" role="document">
    <div class="modal-content border-0" id="modal-chat-view-this">
      <div class="cs-view show" id="modal-chat-view">
        <div class="modal-header border-0 bg-dark px-4">
          <h4 class="modal-title text-light">Support - Chat</h4>
          <button class="close text-light" type="button" data-dismiss="modal" aria-label="Close" id="close-chat"><span aria-hidden="true">Ã—</span></button>
        </div>
        <div class="modal-body px-4 d-flex justify-content-center align-items-center" style="height:65vh; overflow-y: scroll;" id="content-chat">
            <div class="spinner-border text-success" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
      </div>
        <hr>
      <div class="modal-body text-center px-4 pt-2 pb-4">
        <form action="javascript: app.sendDataToUser(event);" class="d-flex justify-content-center align-items-center">
            <div class="form-group m-0 w-100">
                <textarea class="form-control" name="message" onfocus="javascript: app.listenerEnter(event);" id="message-input" placeholder="Your Message Here.." required rows="1"></textarea>
            </div>
            <button class="btn btn-outline-success ml-2" type="submit">
                    <i class="fe-send mr-2"></i>
            </button>
        </form>
       </div>
    </div>
  </div>
</div>